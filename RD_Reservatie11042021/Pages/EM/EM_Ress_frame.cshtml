@page
@model RD_Reserve_280321.Pages.EM.EM_Ress_frameModel

@{
    Layout = "_layout_FW";
}

<!-- Modals - Activate with .net -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<form>
    <div class="form-control p-2 outl-p">
        <img src="~/images/RD_logo.svg" class="rounded float-start" width="125px" alt="Logo An's Hoeve">
        <p style="margin-left: 15px;">
            <b>An's Hoeve</b><br />
            Vis een vlees restaurant
            <br /><br />
            <i>
                Wandeldijk 26, <br />
                2050 Antwerpen <br />
            </i>

        </p>
    </div>
    <div class="form-control p-2 outl-p">
        <!-- Datum select -->
        <div class="d-flex justify-content-center p-2">
            <input class="btn btn-dark btn-lg" type="button" id="EventDate" value="Reservatie datum" data-input>
        </div>
        <!-- Tijdslot select -->
        <div class="d-flex justify-content-center outl-p">
            <select class="form-select" name="StartTime" aria-label="TijdstipSelectStart">
                <option selected>Start uur</option>
                <option value="1">10:00</option>
                <option value="2">10:30</option>
                <option value="3">11:00</option>
            </select>
        </div>
        <!-- Tijdslot select -->
        <div class="d-flex justify-content-center outl-p">
            <select class="form-select" name="EndTime" aria-label="TijdstipSelectEnd">
                <option selected>Geschatte eind uur</option>
                <option value="1">13:00</option>
                <option value="2">15:00</option>
                <option value="3">17:00</option>
            </select>
        </div>
        <!-- Aantal personen select -->
        <div class="mb-3 outl-p">
            <input type="number" class="form-control" id="AantalRess" placeholder="Aantal personen">
        </div>
        <!-- Verder select -->
        <div class="d-flex justify-content-center outl-p">
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#FormuleSelect" aria-expanded="false" aria-controls="gegevensPersoon">
                Bevestig
            </button>
        </div>
    </div>
    <div id="FormuleSelect" class="collapse card outl-p">
        <div class="card">
            <h5 class="card-header">Formule</h5>
            <div class="card-body">
                <label class="card">
                    <input name="options-outlined" value="1" class="radio_V2" type="radio">
                    <span class="hidden-visually">Business - $200 per month, 5+ team members, 1000 GB per month, Unlimited builds</span>
                    <span class="plan-details" aria-hidden="true">
                        <span class="RB_H5">Communiefeest</span>
                        <span class="RB_spanSize">Apperitief all-in dranken*</span>
                        <span class="RB_spanSize">2 apperitief hapjes warm en/of koud</span>
                        <span class="RB_spanSize">3 gangen menu</span>
                        <span class="RB_cost">Vanaf €14<span class="RB_slash">/</span><span class="RB_cycle">pers.</span></span>
                    </span>
                </label>
                <br />
                <label class="card">
                    <input name="options-outlined" value="2" class="radio_V2" type="radio">
                    <span class="hidden-visually">Business - $200 per month, 5+ team members, 1000 GB per month, Unlimited builds</span>
                    <span class="plan-details" aria-hidden="true">
                        <span class="RB_H5">Communiefeest</span>
                        <span class="RB_spanSize">Apperitief all-in dranken*</span>
                        <span class="RB_spanSize">2 apperitief hapjes warm en/of koud</span>
                        <span class="RB_spanSize">3 gangen menu</span>
                        <a href="#" class="">Meer info</a>
                        <span class="RB_cost">Vanaf €14<span class="RB_slash">/</span><span class="RB_cycle">pers.</span></span>
                    </span>
                </label>
                <br />
                <label class="card">
                    <input name="options-outlined" value="3" class="radio_V2" type="radio">
                    <span class="hidden-visually">Business - $200 per month, 5+ team members, 1000 GB per month, Unlimited builds</span>
                    <span class="plan-details" aria-hidden="true">
                        <span class="RB_H5">Communiefeest</span>
                        <span class="RB_spanSize">Apperitief all-in dranken*</span>
                        <span class="RB_spanSize">2 apperitief hapjes warm en/of koud</span>
                        <span class="RB_spanSize">3 gangen menu</span>
                        <a href="#" class="">Meer info</a>
                        <span class="RB_cost">Vanaf €14<span class="RB_slash">/</span><span class="RB_cycle">pers.</span></span>
                    </span>
                </label>
            </div>
        </div>
    </div>


    <div id="gegevensPersoon" class="card outl-p">
        <h5 class="card-header">Contactgegevens</h5>
        <div class="card-body">
            <div class="d-flex justify-content-center outl-p">
                <input type="text" class="form-control" id="LastName" placeholder="Achternaam">
            </div>
            <div class="d-flex justify-content-center outl-p">
                <input type="text" class="form-control" id="E_mail" placeholder="Email adress">
            </div>
            <div class="d-flex justify-content-center outl-p">
                <input type="text" class="form-control" id="Tel" placeholder="Telefoon nr">
            </div>
            <div class="form-switch outl-p">
                <input class="form-check-input" type="checkbox" name="NewsLetter" id="NewsLetter">
                <label class="form-check-label" for="NewsLetter"><b>Nieuwsbrief ontvangen!</b></label><br />
                <input class="form-check-input" type="checkbox" name="AgreeTerms" id="AgreeTerms">
                <label class="form-check-label" for="AgreeTerms"><b>Akkoord met voorwaarden!</b></label>
            </div>
            <div class="d-flex justify-content-center outl-p">
                <button class="btn btn-primary btn-lg" type="submit">Reservatie bevestigen</button>
            </div>
        </div>
    </div>
</form>


